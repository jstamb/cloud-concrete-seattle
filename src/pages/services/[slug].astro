---
import BaseLayout from '@/layouts/BaseLayout.astro';
import LeadForm from '@/components/LeadForm';
import BreadcrumbSchema from '@/components/BreadcrumbSchema.astro';
import ServiceSchema from '@/components/ServiceSchema.astro';
import FAQSchema from '@/components/FAQSchema.astro';
import { SERVICES, PHONE_NUMBER, NEIGHBORHOODS } from '@/lib/constants';
import { SERVICES_CONTENT } from '@/data/services/index';

export function getStaticPaths() {
  return SERVICES.map((service) => ({
    params: { slug: service.slug },
    props: { service }
  }));
}

const { service } = Astro.props;
const content = SERVICES_CONTENT[service.slug];
const relatedServices = content?.relatedServices
  ?.map(slug => SERVICES.find(s => s.slug === slug))
  .filter(Boolean) ?? [];

const title = `${service.name} Contractor Seattle WA | Installation & Repair`;
const description = `Looking for a ${service.name.toLowerCase()} contractor in Seattle? Cloud Concrete offers professional installation & repair with free estimates. Licensed, bonded & insured. Call (206) 495-0997.`;
---

<BaseLayout title={title} description={description}>
  <BreadcrumbSchema items={[
    { name: 'Services', url: '/services' },
    { name: service.name, url: `/services/${service.slug}` },
  ]} />
  <ServiceSchema serviceName={service.name} description={service.shortDescription} />
  {content?.faqs && <FAQSchema faqs={content.faqs} />}

  <div class="pb-32">
    <!-- Hero Section -->
    <div class="bg-brand-dark py-24 md:py-32 text-white relative overflow-hidden">
      <div class="absolute bottom-0 right-0 w-1/2 h-full bg-brand-primary/5 -skew-x-12 translate-x-1/4"></div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl">
          <div class="inline-block bg-brand-primary/20 border border-brand-primary/30 text-brand-secondary px-4 py-1.5 rounded-full text-xs font-black uppercase tracking-[0.2em] mb-6">
            Licensed Seattle Contractor
          </div>
          <h1 class="text-5xl md:text-7xl font-black mb-8 leading-tight">{service.name} Contractor <br/><span class="text-brand-secondary italic">in Seattle, WA</span></h1>
          <p class="text-xl md:text-2xl text-slate-300 leading-relaxed mb-10 font-medium max-w-2xl">{service.shortDescription}</p>
          <div class="flex flex-wrap gap-5">
            <a href={`tel:${PHONE_NUMBER}`} class="bg-brand-primary hover:brightness-110 text-white px-10 py-5 rounded-xl font-black text-lg transition-all shadow-2xl flex items-center gap-3">
              <svg class="w-5 h-5 text-brand-secondary" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 005.455 5.455l.773-1.548a1 1 0 011.06-.539l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/></svg>
              {PHONE_NUMBER}
            </a>
            <a href="/contact" class="bg-white/10 hover:bg-white/20 border border-white/20 text-white px-10 py-5 rounded-xl font-black text-lg transition-all flex items-center gap-3">
              Get Free Estimate
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4 mt-20">
      <div class="flex flex-col lg:flex-row gap-20">
        <!-- Main Content Column -->
        <div class="lg:w-2/3">
          <div class="prose prose-slate prose-xl max-w-none">

            <!-- Extended Overview -->
            <h2 class="text-4xl font-black text-brand-dark mb-8 tracking-tight">Seattle's Trusted {service.name} Contractor</h2>
            <div class="w-20 h-2 bg-brand-primary mb-10"></div>
            <div class="text-slate-600 font-medium leading-relaxed mb-10 whitespace-pre-line">{service.longDescription}</div>

            <!-- Benefits Section -->
            {content?.benefits && content.benefits.length > 0 && (
              <div class="mb-16">
                <h3 class="text-3xl font-black text-brand-dark mb-8 tracking-tight">Why Seattle Homeowners Choose Our {service.name}</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  {content.benefits.map((benefit) => (
                    <div class="flex items-start gap-4 p-6 bg-slate-50 rounded-2xl border border-slate-100">
                      <svg class="w-6 h-6 text-brand-primary flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                      <div>
                        <h4 class="text-lg font-black text-brand-dark mb-2">{benefit.title}</h4>
                        <p class="text-slate-600 font-medium leading-relaxed text-base">{benefit.description}</p>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Process Section -->
            {content?.processSteps && content.processSteps.length > 0 && (
              <div class="mb-16">
                <h3 class="text-3xl font-black text-brand-dark mb-8 tracking-tight">Our {service.name} Process</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                  {content.processSteps.map((item) => (
                    <div class="bg-white p-8 rounded-3xl border border-slate-100 shadow-xl hover:shadow-2xl transition-all relative overflow-hidden group">
                      <div class="absolute -top-4 -right-4 text-8xl font-black text-brand-primary/5 group-hover:text-brand-primary/10 transition-colors">{item.step}</div>
                      <h4 class="text-xl font-black text-brand-primary mb-3 relative z-10 uppercase tracking-tight">{item.title}</h4>
                      <p class="text-slate-600 font-medium relative z-10 leading-relaxed">{item.description}</p>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Seattle Local Context -->
            {content?.localContext && (
              <div class="bg-brand-dark text-white p-12 rounded-[3rem] shadow-2xl relative overflow-hidden mb-16">
                <div class="absolute top-0 right-0 w-32 h-32 bg-brand-primary/20 rounded-full -mr-16 -mt-16"></div>
                <h3 class="text-3xl font-black mb-6 relative z-10 leading-tight">{service.name} Across Seattle Neighborhoods</h3>
                <div class="mb-10 text-slate-300 font-medium leading-relaxed relative z-10 whitespace-pre-line">{content.localContext}</div>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 relative z-10">
                  {NEIGHBORHOODS.slice(0, 8).map(n => (
                    <a href={`/${service.slug}-${n.slug}`} class="text-xs font-black uppercase tracking-widest text-slate-400 hover:text-brand-secondary transition-colors">
                      {n.name} &rarr;
                    </a>
                  ))}
                </div>
              </div>
            )}

            <!-- Case Study -->
            {content?.caseStudy && (
              <div class="mb-16">
                <h3 class="text-3xl font-black text-brand-dark mb-8 tracking-tight">Recent Project: {content.caseStudy.title}</h3>
                <div class="bg-slate-50 p-10 rounded-[2.5rem] border border-slate-100">
                  <div class="flex flex-wrap gap-3 mb-6">
                    <span class="bg-brand-primary/10 text-brand-primary text-xs font-black px-4 py-1.5 rounded-full uppercase tracking-widest">{content.caseStudy.neighborhood}</span>
                    <span class="bg-slate-200 text-slate-600 text-xs font-black px-4 py-1.5 rounded-full uppercase tracking-widest">{content.caseStudy.projectType}</span>
                  </div>
                  <div class="space-y-6">
                    <div>
                      <h4 class="text-lg font-black text-brand-dark mb-2">The Challenge</h4>
                      <p class="text-slate-600 font-medium leading-relaxed">{content.caseStudy.challenge}</p>
                    </div>
                    <div>
                      <h4 class="text-lg font-black text-brand-dark mb-2">Our Solution</h4>
                      <p class="text-slate-600 font-medium leading-relaxed">{content.caseStudy.solution}</p>
                    </div>
                    <div>
                      <h4 class="text-lg font-black text-brand-dark mb-2">The Result</h4>
                      <p class="text-slate-600 font-medium leading-relaxed">{content.caseStudy.result}</p>
                    </div>
                  </div>
                  <div class="mt-8 pt-6 border-t border-slate-200">
                    <a href="/contact" class="inline-flex items-center gap-2 text-brand-primary font-black hover:underline">
                      Want similar results? Get a free estimate
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                    </a>
                  </div>
                </div>
              </div>
            )}

            <!-- Why Choose Us -->
            {content?.whyChooseUs && (
              <div class="mb-16">
                <h3 class="text-3xl font-black text-brand-dark mb-8 tracking-tight">Why Choose Cloud Concrete for {service.name}</h3>
                <div class="text-slate-600 font-medium leading-relaxed whitespace-pre-line">{content.whyChooseUs}</div>
                <div class="mt-8">
                  <a href="/contact" class="inline-flex items-center gap-3 bg-brand-primary hover:brightness-110 text-white px-8 py-4 rounded-xl font-black text-lg transition-all shadow-xl">
                    <svg class="w-5 h-5 text-brand-secondary" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 005.455 5.455l.773-1.548a1 1 0 011.06-.539l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/></svg>
                    Request Your Free Estimate
                  </a>
                </div>
              </div>
            )}

            <!-- Maintenance Tips -->
            {content?.maintenanceTips && content.maintenanceTips.length > 0 && (
              <div class="bg-slate-50 p-12 rounded-[3rem] border border-slate-100 mb-16">
                <h3 class="text-2xl font-black text-brand-dark mb-6 tracking-tight">Maintenance & Longevity Tips</h3>
                <p class="text-slate-600 font-medium leading-relaxed mb-8">
                  Protect your investment and ensure your {service.name.toLowerCase()} lasts for decades with these expert tips:
                </p>
                <ul class="space-y-4">
                  {content.maintenanceTips.map(tip => (
                    <li class="flex items-start gap-3">
                      <div class="w-2 h-2 bg-brand-primary rounded-full mt-3 flex-shrink-0"></div>
                      <span class="text-slate-700 font-medium">{tip}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <!-- FAQ Section -->
            {content?.faqs && content.faqs.length > 0 && (
              <div class="mb-16">
                <h3 class="text-3xl font-black text-brand-dark mb-8 tracking-tight">Frequently Asked Questions About {service.name}</h3>
                <div class="space-y-4">
                  {content.faqs.map((faq) => (
                    <details class="group bg-white border border-slate-200 rounded-2xl overflow-hidden">
                      <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-slate-50 transition-colors">
                        <h4 class="text-lg font-black text-brand-dark pr-4">{faq.question}</h4>
                        <svg class="w-5 h-5 text-brand-primary flex-shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                      </summary>
                      <div class="px-6 pb-6">
                        <p class="text-slate-600 font-medium leading-relaxed">{faq.answer}</p>
                      </div>
                    </details>
                  ))}
                </div>
              </div>
            )}

            <!-- Related Services -->
            {relatedServices.length > 0 && (
              <div class="mb-16">
                <h3 class="text-3xl font-black text-brand-dark mb-8 tracking-tight">Related Concrete Services</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  {relatedServices.map(related => (
                    <a href={`/services/${related!.slug}`} class="group flex items-center gap-4 p-5 bg-white border border-slate-100 rounded-2xl hover:shadow-lg hover:border-brand-primary/20 transition-all">
                      <div class="flex-shrink-0 w-10 h-10 bg-brand-primary/10 text-brand-primary rounded-xl flex items-center justify-center group-hover:bg-brand-primary group-hover:text-white transition-colors">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                      </div>
                      <div>
                        <h4 class="font-black text-brand-dark group-hover:text-brand-primary transition-colors">{related!.name}</h4>
                        <p class="text-sm text-slate-500 font-medium">{related!.shortDescription}</p>
                      </div>
                    </a>
                  ))}
                </div>
              </div>
            )}

            <!-- Final CTA -->
            <div class="bg-brand-primary text-white p-12 rounded-[3rem] shadow-2xl relative overflow-hidden">
              <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-white/10 rounded-full"></div>
              <div class="relative z-10">
                <h3 class="text-3xl font-black mb-4 leading-tight">Ready to Start Your {service.name} Project?</h3>
                <p class="text-white/80 font-medium leading-relaxed mb-8 text-lg">
                  Get a free, no-obligation estimate from Seattle's most trusted concrete contractor. Licensed, bonded, and insured for your protection.
                </p>
                <div class="flex flex-wrap gap-4">
                  <a href="/contact" class="bg-white text-brand-primary hover:bg-slate-100 px-8 py-4 rounded-xl font-black text-lg transition-all">
                    Get Free Estimate
                  </a>
                  <a href={`tel:${PHONE_NUMBER}`} class="bg-white/20 hover:bg-white/30 border border-white/30 text-white px-8 py-4 rounded-xl font-black text-lg transition-all flex items-center gap-2">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 005.455 5.455l.773-1.548a1 1 0 011.06-.539l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/></svg>
                    {PHONE_NUMBER}
                  </a>
                </div>
              </div>
            </div>

          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:w-1/3">
          <div class="sticky top-32">
            <LeadForm client:load pathname={Astro.url.pathname} />
            <div class="mt-10 bg-brand-dark text-white p-10 rounded-[2.5rem] shadow-2xl relative overflow-hidden">
              <div class="absolute -bottom-10 -left-10 w-40 h-40 bg-brand-primary/10 rounded-full"></div>
              <h4 class="text-lg font-black mb-6 uppercase tracking-[0.2em] text-brand-secondary relative z-10">Technical Specialties</h4>
              <div class="flex flex-wrap gap-2 relative z-10">
                {service.keywords.map(k => (
                  <span class="bg-white/5 border border-white/10 text-[10px] font-black px-3 py-1.5 rounded-lg text-slate-400 uppercase tracking-widest hover:text-white hover:border-brand-primary transition-all cursor-default">
                    {k}
                  </span>
                ))}
              </div>
            </div>
            <div class="mt-6 bg-slate-50 border border-slate-100 p-8 rounded-2xl">
              <h4 class="text-sm font-black uppercase tracking-widest text-slate-400 mb-4">Project Value</h4>
              <span class="text-brand-primary font-black text-3xl tracking-tighter">{service.priceIndicator}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
