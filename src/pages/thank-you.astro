---
import BaseLayout from '@/layouts/BaseLayout.astro';
import BreadcrumbSchema from '@/components/BreadcrumbSchema.astro';
import { PHONE_NUMBER } from '@/lib/constants';

const title = 'Thank You';
const description = "Thank you for contacting Cloud Concrete of Seattle. We'll be in touch shortly.";
---

<BaseLayout title={title} description={description} noIndex={true}>
  <BreadcrumbSchema items={[{ name: 'Thank You', url: '/thank-you' }]} />

  <div class="pb-32">
    <div class="min-h-[70vh] flex items-center justify-center py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center">
          <div class="w-24 h-24 bg-brand-primary/10 rounded-full flex items-center justify-center mx-auto mb-8">
            <svg class="w-12 h-12 text-brand-primary" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>

          <h1 class="text-5xl md:text-6xl font-black text-brand-dark mb-6 tracking-tight">
            Thank You!
          </h1>

          <p class="text-xl text-slate-600 mb-8 font-medium leading-relaxed">
            We've received your request and will be in touch within 24 hours to discuss your project.
          </p>

          <div class="bg-slate-50 p-8 rounded-[2rem] border border-slate-100 mb-10">
            <h2 class="text-lg font-black text-brand-dark mb-4 uppercase tracking-wider">What Happens Next</h2>
            <ul class="space-y-3 text-left max-w-md mx-auto">
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-brand-primary text-white rounded-full flex items-center justify-center text-sm font-bold flex-shrink-0 mt-0.5">1</span>
                <span class="text-slate-600 font-medium">Our team reviews your project details</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-brand-primary text-white rounded-full flex items-center justify-center text-sm font-bold flex-shrink-0 mt-0.5">2</span>
                <span class="text-slate-600 font-medium">We'll call to schedule a free on-site consultation</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-6 h-6 bg-brand-primary text-white rounded-full flex items-center justify-center text-sm font-bold flex-shrink-0 mt-0.5">3</span>
                <span class="text-slate-600 font-medium">You'll receive a detailed written estimate</span>
              </li>
            </ul>
          </div>

          <p class="text-slate-500 mb-8">
            Need to reach us sooner? Call us at{' '}
            <a href={`tel:${PHONE_NUMBER}`} class="text-brand-primary font-bold hover:underline">
              {PHONE_NUMBER}
            </a>
          </p>

          <a
            href="/"
            class="inline-flex items-center gap-2 bg-brand-dark text-white px-8 py-4 rounded-full font-bold hover:bg-brand-primary transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
